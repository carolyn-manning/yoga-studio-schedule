<div class="list-header">
    <h2> Sign Up </h2> 
</div>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message|%>
  <li><%= message %> </li>
  <%end%>
<%end%>

<%= form_for(@user) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.hidden_field :admin, :value => false %>
    <br>
    <%= f.submit %>
  <% end %>

  <%= link_to('Log in with GitHub!', '/auth/github', method: :post) %>